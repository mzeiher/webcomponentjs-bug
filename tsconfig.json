{
    "compilerOptions": {
        "lib": [
            "es2015",
            "dom",
            "es2015.promise",
            "es2015.generator",
            "es2015.core",
            "es6"
        ],
        "target": "es5",
        "module": "es6",
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./",
        "declarationDir": "./",
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "jsxFactory": "h",
        "moduleResolution": "node"
    },
    "include": [
        "*.ts",
        "**/*.ts",
        "src/*.ts",
        "src/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src.sample/*.ts"
    ],
    "exclude": [
        "dist",
        "sample",
        "node_modules"
    ]
}